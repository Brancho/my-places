mixin review(review)
    .review__header
        .review__author
            p.f5= review.author.name
        .review__stars(title=`Rated ${review.rating} our of 5 stars`)
            .f4.dib.star= `✭`.repeat(review.rating)
            .f4.dib.star= `✩`.repeat(5- review.rating)
        time.f5.fw2.review__time(datetime=review.created)= h.moment(review.created).fromNow()
    .review__body
        p.f5.fw2= review.text