mixin storeCard(store = {})

    .mv3.shadow-4.w-30
        .store__hero.tr.pa3.relative
            img.w-100.h-100.absolute.top-0.left-0.right-0.cover(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title.z-2.ma0.relative.f2
                a.link.black.pa2.pb1(href=`/store/${store.slug}`) #{store.name.toUpperCase()}
        .pa3
            - const text = store.description.split(' ')
            p.f5.ma0.di= text.slice(0, 25).join(' ')
            span.f5= store.description.split(' ').length > 25 ? '...' : ''