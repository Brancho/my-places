extends header

block content
    .inner
        form.form.shadow-2.mt4(action='/register', method='POST')
            h2 Register
            label(for='name') Name
            input(type='text', name='name' value=body && body.name)
            label(for='email') Email
            input(type='email', name='email' value=body && body.email)
            label(for='password') Password
            input(type='password', name='password')
            label(for='password-confirm') Confirm Password
            input(type='password', name='password-confirm')
            input.button.mt3.pointer(type='submit', value='Register')